<%- include('../includes/prove02-head.ejs') %>

<link rel="stylesheet" href="/stylesheets/prove02-product.css">
</head>

<body>
<%- include('../includes/prove02-navigation.ejs') %>

<main>
    <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let product of prods) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= product.imageURL %>" 
                         alt="<%= product.title %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$<%= product.price %></h2>
                        <p class="product__description"><%= product.description %></p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Add to Cart</button>
                    </div>
                </article>
            <% } %>
        </div>
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>


<%- include('../includes/prove02-head.ejs') %>
    <link rel="stylesheet" href="/stylesheets/prove02-forms.css">
    <link rel="stylesheet" href="/stylesheets/prove02-product.css">
</head>

<body>
   <%- include('../includes/prove02-navigation') %>

    <main>
        <form class="product-form" action="/admin/add-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
            </div>

            <button class="btn" type="submit">Add Product</button>
        </form>
    </main>

    <%- include('../includes/prove02-end.ejs') %> 
